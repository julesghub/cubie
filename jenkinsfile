pipeline {
    agent {
        docker { 
          image 'ubuntu:latest'
          label 'slave'
        }
    }
    stages {
        stage('Build') {
            steps {
              sh 'env'
              sh 'sh ls -lhtr'
              sh './make'
              
                /*dir("./libUnderworld") {
                  sh './configure.py'
                  sh './compile.py'
                }*/
            }
        }
        stage('Go Up a Directory') {
          steps {
            dir("../") { sh 'sh ls -lhtr' }
          }
        }
        stage('Run') {
          steps {
            sh './go -l 11 -d 6 -r 10 -i 5'
          }
        }
    }
}
