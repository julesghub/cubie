pipeline {
    agent {
        docker { 
          image 'underworldcode/underworld2:latest'
          label 'slave'
        }
    }
    stages {
        stage('Build') {
            steps {
              sh 'env'
              sh 'ls -lhtr'
              sh 'make'
              
                /*dir("./libUnderworld") {
                  sh 'python configure.py'
                  sh 'python compile.py'
                }*/
            }
        }
        stage('Go Up a Directory') {
          steps {
            dir("../") { sh 'ls -lhtr' }
          }
        }
        stage('Run') {
          steps {
            sh 'go -l 11 -d 6 -r 10 -i 5'
          }
        }
    }
}
